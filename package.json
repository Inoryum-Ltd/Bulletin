{
    "name": "chain-art",
    "description": "Customized version of Bulletin Theme for Chain Art",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Inoryum",
        "email": "hello@inoryum.com",
        "url": "https://inoryum.com"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 1,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "cta_title": {
                "type": "text",
                "default": "Stay tuned!",
                "group": "homepage"
            },
            "cta_description": {
                "type": "text",
                "default": "Donâ€™t miss out on the latest issues. Sign up now to get access to the library of members-only issues.",
                "group": "homepage"
            },

            "number_of_subscribers": {
                "type": "text",
                "group": "homepage"
            },
            "instagram_page": {
                "type": "text"
            },
            "feature_image_width": {
                "type": "select",
                "options": ["Full", "Wide", "Small"],
                "default": "Small",
                "group": "post"
            }
        }
    }
}
